---
import { t } from 'i18next'

const routes = [
  { text: t('routes.portifolio') },
  { text: t('routes.skills') },
  { text: t('routes.experience') },
  { text: t('routes.contact') },
]

export interface Props {
  isMobileMenuOpen: boolean
}

const { isMobileMenuOpen} = Astro.props

---

<div class:list={[isMobileMenuOpen ? 'block' : 'hidden']}>
  <nav class='flex flex-col bg-white absolute z-10 bottom-0 left-0 w-full md:static md:flex-row md:justify-end md:mr-64'>
    <ul class='flex gap-2 md:justify-end items-center h-[calc(100vh_-_4.5rem)] flex-col justify-center md:flex-row md:h-auto'>
      {
        routes.map(route => (
          <li>
            <a href='#'>{route.text}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</div>